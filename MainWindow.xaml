<Window x:Class="UnionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnionApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="467*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="237*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="Roomlist" HorizontalAlignment="Center" Height="430" VerticalAlignment="Center" Width="150" Background="#FF4794BC" HeadersVisibility="None" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <DataGrid x:Name="Userlist" Grid.Column="2" HorizontalAlignment="Center" Height="430" VerticalAlignment="Center" Width="130" Background="#FF4794BC" HeadersVisibility="None" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalScrollBarVisibility="Disabled"/>


    </Grid>
</Window>
